= form_for(@news_item) do |f|
  - if @news_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@news_item.errors.count, "error")} prohibited this News Item from being saved:"
      %ul
        - @news_item.errors.full_messages.each do |msg|
          %li= msg

  .field">
    = f.label :subject
    %br/
    = f.text_field :subject
  .field">
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :publish_at
    %br/
    = f.datetime_select :publish_at
  .actions
    = f.submit
