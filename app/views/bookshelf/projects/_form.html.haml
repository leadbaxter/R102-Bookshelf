= form_for @project do |f|
  -if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this Project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :created_by
    = f.text_field :created_by
  .field
    = f.label :content_id
    = f.text_field :content_id
  .field
    = f.label :archived
    = f.check_box :archived
  .actions
    = f.submit 'Save'
